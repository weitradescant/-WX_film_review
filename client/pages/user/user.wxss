/* pages/user/user.wxss */
page{
  background: #F7F9FC;
  width: 100%;
}
.title{
  margin: 0 auto;
  padding: 100rpx 0;
  text-align: center;
  color: #F9A813;
  font-size: 32rpx;
}
.movie_list{
  margin-bottom: 150rpx;
}
.area{
  width: 700rpx;
  margin: 0 auto 50rpx;
  display: flex;
}

.img__movie{
  width: 280rpx;
  height: 400rpx;
}
.introduce{
  width: 420rpx;
  border: 1px solid #E6EBF0;
  background: #fff;
}

.nav-bar{
  position: fixed;
  bottom: 0;
  width: 100%;
  height: 140rpx;
  border-top: 1px solid #E6EBF0;
  color: #A5B5C3;
  background: #fff;
  line-height: 130rpx;
  text-align: center;
}
.nav-bar:active{
  background: #eee;
}