/* pages/user/user.wxss */
/* 导航样式*/
/*初始化样式*/


page{
  background: #F7F9FC;
  width: 100%;
}

.title{
  margin: 0 auto;
  padding: 100rpx 0;
  text-align: center;
  color: #F9A813;
  font-size: 32rpx;
}
.movie_list{
  margin-top: 120rpx;
  margin-bottom: 150rpx;
}
.area{
  width: 700rpx;
  margin: 0 auto 50rpx;
  display: flex;
}

.img__movie{
  width: 280rpx;
  height: 400rpx;
}
.introduce{
  width: 420rpx;
  padding-top: 30rpx;
  border: 1px solid #E6EBF0;
  background: #fff;
}
.movie_title{
  font-weight: bold;
  font-size: 15px;
}
.movie_comment{
  margin: 30rpx 0;
  font-size: 12px;
}
.icon{
  width: 40rpx;
  height: 40rpx;
  margin-right: 10rpx;
  vertical-align: text-bottom;
}
.record{
  width: 240rpx;
  height: 80rpx;
  line-height: 80rpx;
  margin: 30rpx auto;
  border: 1px solid #E6EBF0;
  text-align: center;
  font-size: 34rpx;
}
.img__avatar{
  display: inline-block;
  width:100rpx;
  height: 100rpx;
  border-radius: 100rpx;
}
.username{
  display: inline-block;
  line-height: 100rpx;
  vertical-align: top;
}
.nav-bar{
  position: fixed;
  bottom: 0;
  width: 100%;
  height: 140rpx;
  border-top: 1px solid #E6EBF0;
  color: #A5B5C3;
  background: #fff;
  line-height: 130rpx;
  text-align: center;
  z-index: 10;
}
.nav-bar:active{
  background: #eee;
}
.home{
  display: block;  
  width: 100%;
}
view.swiper-tab, 
view.swiper-tab-item{
  display: flex;
  box-sizing: border-box;
}

.swiper-tab {
  position: fixed;
  top: 0;
  width: 100%;
  height: 100rpx;
  justify-content: center;
  align-items: center;
  z-index: 10;
  background: #F7F9FC;
}

.swiper-tab-item {
  background-color: #f3f3f3;
  width: 50%;
  height: 80rpx;
  justify-content: center;
  align-items: center;
}
.swiper-active{
  background-color: rgb(129, 190, 247);
  color: #fff;
}
