/* pages/commentList/commentList.wxss */
page{
  background: #F7F9FC;
  width: 100%;
  height: 100%;
}
.comment{
  width: 100%;
  height: 250rpx;
  background: #fff;
  border: 1px solid #E6EBF0;

}
.comment:first-child{
  margin-top: 50rpx;
}

.nav-bar{
  position: fixed;
  bottom: 0;
  width: 100%;
  height: 140rpx;
  border-top: 1px solid #E6EBF0;
  color: #A5B5C3;
  background: #fff;
  line-height: 130rpx;
  text-align: center;
}
.nav-bar:active{
  background: #eee;
}