/* pages/commentList/commentList.wxss */
page{
  background: #F7F9FC;
  width: 100%;
  padding-top: 50rpx;
}
.comment{
  width: 100%;
  height: 170rpx;
  padding: 40rpx 0;
  background: #fff;
  border: 1px solid #E6EBF0;

}
.user,.content{
  margin-left: 50rpx;
}
.img__avatar{
  display: inline-block;
  width:100rpx;
  height: 100rpx;
  border-radius: 100rpx;
}
.username{
  display: inline-block;
  line-height: 100rpx;
  vertical-align: top;
}
.content{
  font-size: 32rpx;
  width: 80%;
  white-space: nowrap;
  text-overflow: ellipsis;
  overflow-x: hidden;
}
.icon{
  width: 40rpx;
  height: 40rpx;
  margin-right: 10rpx;
  vertical-align: text-bottom;
}
.record{
  width: 260rpx;
  height: 80rpx;
  line-height: 80rpx;
  margin: 0 auto;
  border: 1px solid #E6EBF0;
  text-align: center;
  font-size: 34rpx;
}
.nav-bar{
  position: fixed;
  bottom: 0;
  width: 100%;
  height: 140rpx;
  border-top: 1px solid #E6EBF0;
  color: #A5B5C3;
  background: #fff;
  line-height: 130rpx;
  text-align: center;
}
.nav-bar:active{
  background: #eee;
}