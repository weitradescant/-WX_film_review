/* pages/home/home.wxss */
page{
  background: #F7F9FC;
  width: 100%;
}
.img__movie{
  width: 550rpx;
  height: 750rpx;
  margin: 30rpx 100rpx 0;
}
.moive-title, .moive-recommend{
  text-align: center;
}
.moive-title{
  margin-top: 30rpx;
  font-size: 48rpx;
}
.recommend__wrap{
  margin-top: 30rpx;
  text-align: center;
}
.img__avatar{
  display: inline-block;
  width:100rpx;
  height: 100rpx;
  border-radius: 100rpx;
}
.moive-recommend{
  display: inline-block;
  font-size: 34rpx;
  line-height: 100rpx;
  vertical-align: top;
}
.nav-bar{
  position: fixed;
  bottom: 0;
  width: 100%;
  height: 140rpx;
  border-top: 1px solid #E6EBF0;
  color: #A5B5C3;
  background: #fff;
}
.moive-list,.user{
  display: inline-block;
  width: 375rpx;
  height: 100%;
  line-height: 130rpx;
  text-align: center;
}
.moive-list:active,.user:active{
  background: #eee;
}
.icon{
  width: 50rpx;
  height: 50rpx;
  margin-right: 10rpx;
  vertical-align: text-bottom;
}